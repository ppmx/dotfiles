* {
	naroka-dark1: #3d3d3d;
	naroka-dark2: #333333;
	naroka-dark3: #1b1b1b;
	naroka-dark4: #141414;

	naroka-light1: #d0d0d0;
	naroka-light2: #dadada;
	naroka-light3: #f0f0f0;
	naroka-light4: #fefefe;

	naroka-red:     #ef4343;
	naroka-green:   #90ce42;
	naroka-yellow:  #ffd300;
	naroka-blue:    #6795cd;
	naroka-magenta: #c269bc;
	naroka-cyan:    #40d0dd;


	naroka-cyan-dimmed: #40d0ddb0;


	background-color: @naroka-dark4;
	text-color: @naroka-light2;

	transparent: rgba(0, 0, 0, 0);
}



